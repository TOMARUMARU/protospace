.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          = image_tag @user.avatar, class: "media-object", alt: "64x64", "data-holder-rendered": true, "data-src": "holder.js/64x64", style: "width: 64px; height: 64px;"
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = current_user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = current_user.profile
          .col-md-6
            %h4 Works
            %p
              = current_user.works
.container.proto-list
  .row
    - @user.prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to prototype_path(prototype) do
            = image_tag prototype.proto_images.first.image.url
            .caption
              %h3= prototype.title
              .proto-meta
                .proto-date
                  = prototype.created_at.strftime("%b %d")
              %ul.proto-tag-list.list-inline
                %li
                  %a{href: "#", class: "btn btn-default"} タグ1
                %li
                  %a{href: "#", class: "btn btn-default"} タグ2
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
