- if user_signed_in?
  -if prototype.like_user(current_user)
    .col-md-6.text-right
      = button_to prototype_likes_path(prototype), method: :delete, id: "like-button", class: "btn btn-default", remote: true do
        = image_tag("icon_red_heart.svg")
        Like
        %span.num
          = prototype.likes_count
  - else
    .col-md-6.text-right
      = button_to prototype_likes_path(prototype), id: "like-button", class: "btn btn-default", remote: true do
        = image_tag("icon_heart.svg")
        Like
        %span.num
          = prototype.likes_count
- else
  .col-md-6.text-right
    = button_to user_session_path, id: "like-button", class: "btn btn-default" do
      = image_tag("icon_heart.svg")
      Like
      %span.num
        = prototype.likes_count
