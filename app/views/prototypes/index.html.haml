.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to "Popular PROTO", root_path
        %li{role: "presentation"}
          = link_to "Newest PROTO", root_path
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags
.container.proto-list
  .row
    - @prototypes.each do | pt |
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to prototype_path(pt) do
            = image_tag pt.proto_images.first.image.url
            .caption
              %h3= pt.title
              .proto-meta
                .proto-user
                  = link_to "by #{pt.user.name}", user_path(pt.user)
                .proto-posted
                  = pt.created_at.strftime("%b %d")
              %ul.proto-tag-list.list-inline
                -# 以下タグ機能の時実装
                %li
                  %a{href: "#", class: "btn btn-default"} タグ1
                %li
                  %a{href: "#", class: "btn btn-default"} タグ2

.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label" => "Previous", href: "#"}
        %span{"aria-hidden" => "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
